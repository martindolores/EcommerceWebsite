@using EcommerceWebsite.Models;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<Products>;
@{
    ViewData["Title"] = "Home Page";
}
<br />
<br />
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px;color:steelblue;">@product.Name</label>
                    </h4>
                </div>
                <img src="/@product.Image" alt="Card Image" class="card-img-top" style="height:300px" />
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px;color:#a51313"><b>$@product.Price</b></label>
                        </div>
                        <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-info float-right">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.PagedListPager(Model, generatePageUrl: c => Href(contentPath: "~/Customer/Home/Index?page=" + c), PagedListRenderOptions.Classic)
</div>

@section Scripts {
    <script type="text/javascript">
        $(function(){
            var order = '@TempData["checkout"]'
            if (order != "") {
                // Extend existing 'alert' dialog
                if (!alertify.errorAlert) {
                    //define a new errorAlert base on alert
                    alertify.dialog('errorAlert', function factory() {
                        return {
                            build: function () {
                                var errorHeader = '<span class="fa-solid fa-circle-check" '
                                    + 'style="vertical-align:middle;color:#09cf02;">'
                                    + '</span> Order Placed';
                                this.setHeader(errorHeader);
                            }
                        };
                    }, true, 'alert');
                }
                //launch it.
                // since this was transient, we can launch another instance at the same time.
                alertify
                    .errorAlert(order + "<br/><br/><br/>");
            }
        })
    </script>
    <script type="text/javascript">
        $(function(){
            var save = '@TempData["addcart"]'
            if (save != "") {
                alertify.success(save);
            }
        })
    </script>
}