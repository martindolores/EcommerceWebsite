@using EcommerceWebsite.Models;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<Products>;
@{
    Layout = null;
}

<div id="content">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-4">
                <div class="card mb-4">
                    <div class="card-header">
                        <h4 class="my-0 font-weight-normal">
                            <label style="font-size:23px;color:black; font-family: 'Courier New', monospace;">@product.Name</label>
                        </h4>
                    </div>
                    <img src="/@product.Image" alt="Card Image" class="card-img-top" style="height:300px" />
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <label style="font-size:20px;color:#a51313"><b>$@product.Price</b></label>
                            </div>
                            <a asp-action="Details" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-outline-info float-right">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="contentPager">
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page }), new PagedListRenderOptions
    {
        PageClasses = new string[] { "page-link" },
        UlElementClasses = new string[] { "pagination" },
        LiElementClasses = new string[] { "page-item" },
    })
</div>

