@model int

<td style="width : 150px">
    <div class="btn-group">
        <!--Product Types Buttons-->
        <a asp-action="Edit" asp-controller="ProductTypes" class="btn btn-primary" asp-route-id="@Model"><i class="fa-solid fa-pen-to-square"></i></a>
        <a asp-action="Details" asp-controller="ProductTypes" class="btn btn-success" asp-route-id="@Model"><i class="fa-solid fa-bars"></i></a>
        <a asp-action="Delete" asp-controller="ProductTypes" class="btn btn-danger" asp-route-id="@Model"><i class="fa-solid fa-trash-can"></i></a>
    </div>
</td>

